<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<body>

<metal:main fill-slot="main">

    <metal:main-macro define-macro="main"
           tal:define="templateId template/getId;">

        <div tal:replace="structure provider:plone.abovecontenttitle" />
        <div tal:replace="structure provider:plone.belowcontenttitle" />
        <div tal:replace="structure provider:plone.abovecontentbody" />

        <ul class="article-listing" tal:define="results python:context.aq_parent.restrictedTraverse('@@articlesListing')(limit=15)">
          <tal:article tal:repeat="item results">
            <div metal:use-macro="context/listing_macros/macros/article_listing"></div>
          </tal:article> 
        </ul>
            
    </metal:main-macro>
</metal:main>

</body>
</html>